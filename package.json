{
  "name": "ipfs-p2wdb-service",
  "version": "5.0.0",
  "description": "P2WDB: pay-to-write database, a p2p censorship-resistent database.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "npm run test:all",
    "test:all": "export P2W_ENV=test && c8 --reporter=text mocha --exit --timeout 15000 --recursive test/unit test/e2e/automated",
    "test:unit": "export P2W_ENV=test && mocha --exit --timeout 15000 --recursive test/unit/",
    "test:e2e:auto": "export P2W_ENV=test && mocha --exit --timeout 15000 test/e2e/automated/",
    "test:integration": "mocha --exit --timeout 15000 --recursive test/integration/",
    "test:temp": "export P2W_ENV=test && mocha --exit --timeout 15000 -g '#rate-limit' test/unit/json-rpc/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs",
    "coverage:report": "export P2W_ENV=test && c8 --reporter=html mocha --exit --timeout 15000 --recursive test/unit/ test/e2e/automated/"
  },
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "GPLv2",
  "apidoc": {
    "title": "ipfs-p2wdb-service",
    "url": "https://p2wdb.fullstack.cash"
  },
  "repository": "Permissionless-Software-Foundation/ipfs-p2wdb-service",
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "11.0.1",
    "@chainsafe/libp2p-noise": "14.1.0",
    "@chainsafe/libp2p-yamux": "6.0.1",
    "@chris.troutner/orbitdb-helia": "1.0.8",
    "@chris.troutner/retry-queue": "1.0.8",
    "@helia/unixfs": "1.4.3",
    "@libp2p/bootstrap": "10.0.7",
    "@libp2p/circuit-relay-v2": "1.0.7",
    "@libp2p/identify": "1.0.6",
    "@libp2p/tcp": "9.0.7",
    "@multiformats/multiaddr-matcher": "^1.1.0",
    "@psf/bch-js": "6.7.3",
    "axios": "0.27.2",
    "bcryptjs": "2.4.3",
    "blockstore-fs": "1.1.8",
    "datastore-fs": "9.1.6",
    "glob": "7.1.6",
    "helia": "2.1.0",
    "helia-coord": "1.2.23",
    "jsonrpc-lite": "2.2.0",
    "jsonwebtoken": "8.5.1",
    "jwt-bch-lib": "1.3.0",
    "kcors": "2.2.2",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-convert": "2.0.0",
    "koa-generic-session": "2.1.1",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-passport": "4.1.3",
    "koa-router": "10.0.0",
    "koa-static": "5.0.0",
    "koa2-ratelimit": "0.9.1",
    "libp2p": "1.0.10",
    "line-reader": "0.4.0",
    "lru": "3.1.0",
    "minimal-slp-wallet": "5.11.1",
    "mongoose": "5.13.14",
    "node-fetch": "npm:@achingbrain/node-fetch@2.6.7",
    "nodemailer": "6.7.5",
    "p2wdb": "2.4.0",
    "passport-local": "1.0.0",
    "psf-multisig-approval": "2.0.3",
    "public-ip": "4.0.4",
    "shelljs": "0.8.5",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.0"
  },
  "devDependencies": {
    "apidoc": "0.51.1",
    "c8": "7.13.0",
    "chai": "4.3.0",
    "husky": "4.3.8",
    "lodash.clonedeep": "4.5.0",
    "mocha": "10.0.0",
    "rimraf": "5.0.5",
    "semantic-release": "19.0.3",
    "sinon": "9.2.4",
    "standard": "17.0.0",
    "uuid": "8.3.2"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "standard": {
    "ignore": [
      "/test/unit/mocks/**/*.js"
    ]
  }
}
